---
import { getEntryBySlug } from "astro:content";
import type { Metadata } from "@lib/Metadata";
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@components/Hero.astro";
import Section from "@components/Section.astro";

const photos = await Promise.all([
  getEntryBySlug("photos", "001_yudha"),
  getEntryBySlug("photos", "002"),
  getEntryBySlug("photos", "003"),
  getEntryBySlug("photos", "004"),
]);

const meta: Metadata = {
  title: "TERAS - PENDOPO COFFEE",
  description: "TERAS (Therapy Art Session) 21 - 26 Juli 2024",
};
---

<BaseLayout meta={meta}>
  <Hero
    title="TERAS - PENDOPO COFFEE"
    detail="Therapy Art Session @Pendopo Coffee 21 - 26 Juli 2024"
  />
  <Section title="" name="">
    <div class="mx-auto mt-16 max-w-3xl text-center">
      <h1
        class="text-gray-900 border-purple-600 mb-2 border-t-4 border-b-4 py-4 text-4xl font-bold leading-tight"
      >
        TERAS ( Therapy Art Session )
      </h1>
      <p class="text-gray-800 mb-8 text-lg">
        üè° <a
          href="https://www.instagram.com/pendopo.coffee/"
          target="_blank"
          class="text-pendopo underline underline-offset-8 hover:underline"
          >Pendopo Coffee</a
        > 21 - 26 Juli 2024
      </p>
    </div>

    <div class="flex flex-col items-center justify-center">
      <a
        href=""
        class="text-md mt-3 inline-flex animate-bounce rounded-lg bg-bluelight px-4 py-2 font-medium tracking-wide text-black hover:animate-none focus:animate-none"
      >
        <span class="ml-2">Panduan bid ‚òë</span>
      </a>

      <a
        href=""
        class="text-indigo-700 border-indigo-600 mt-2 inline-flex gap-2 rounded border py-2 px-6"
      >
        <span> Bid Karya Lelang </span>
        <svg
          class="w-4"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          viewBox="0 0 24 24"
          class="ml-2 h-6 w-6"
        >
          <path d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>

    <div class="grid-standard">
      {
        photos.map(({ data, slug }) => (
          <div class="relative">
            <a href={`/photos/${slug}`} class="block">
              <img
                src={data.compressed.src}
                alt={data.alt}
                class="h-auto w-full"
              />
              <p class="absolute top-0 left-0 p-2 text-lg font-semibold underline decoration-wavy">
                #{data.title}
              </p>

              {data.price && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="48"
                  height="48"
                  viewBox="0 0 24 24"
                  class="absolute top-0 right-0 h-12 w-12 p-2"
                >
                  <path
                    fill="currentColor"
                    fill-rule="evenodd"
                    d="m16.137 4.728l1.83 1.83C20.656 9.248 22 10.592 22 12.262c0 1.671-1.344 3.015-4.033 5.704c-2.69 2.69-4.034 4.034-5.705 4.034c-1.67 0-3.015-1.344-5.704-4.033l-1.83-1.83c-1.545-1.546-2.318-2.318-2.605-3.321c-.288-1.003-.042-2.068.45-4.197l.283-1.228c.413-1.792.62-2.688 1.233-3.302c.614-.613 1.51-.82 3.302-1.233l1.228-.284c2.13-.491 3.194-.737 4.197-.45c1.003.288 1.775 1.061 3.32 2.606m-4.99 9.6c-.673-.672-.668-1.638-.265-2.403a.75.75 0 0 1 1.04-1.046c.34-.18.713-.276 1.085-.272a.75.75 0 0 1-.014 1.5a.88.88 0 0 0-.609.277c-.387.387-.286.775-.177.884c.11.109.497.21.884-.177c.784-.784 2.138-1.044 3.005-.177c.673.673.668 1.639.265 2.404a.75.75 0 0 1-1.04 1.045a2.201 2.201 0 0 1-1.472.232a.75.75 0 1 1 .302-1.47c.177.037.463-.021.708-.266c.387-.388.286-.775.177-.884c-.11-.109-.497-.21-.884.177c-.784.784-2.138 1.044-3.005.176m-1.126-4.035a2 2 0 1 0-2.829-2.828a2 2 0 0 0 2.829 2.828"
                    clip-rule="evenodd"
                  />
                </svg>
              )}
            </a>
          </div>
        ))
      }
    </div>
  </Section>
</BaseLayout>
